@{
}

@using IntexLegoSecure.ViewModels
@model CreateProductViewModel
@{
    ViewData["Title"] = "Create New Product";
}
<section class="about">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <section class="about">
                <h1 class="heading">Edit Product</h1>
                <form method="post" class="mt-3">
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Year" class="form-control">
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="NumParts" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="NumParts" class="form-control">
                            <span asp-validation-for="NumParts" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Price" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ImgLink" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ImgLink" class="form-control">
                            <span asp-validation-for="ImgLink" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PrimaryColor" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="PrimaryColor" class="form-control">
                            <span asp-validation-for="PrimaryColor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="SecondaryColor" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="SecondaryColor" class="form-control">
                            <span asp-validation-for="SecondaryColor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Description" class="form-control">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Category" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Category" class="form-control">
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-action="AdminProducts" class="btn btn-primary">Cancel</a>
                        </div>
                    </div>

                </form>
            </section>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</section>
